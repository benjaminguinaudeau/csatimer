fix <- function(.x, var, orig, lag){
if(orig %in% .x$date_end & lag %in% .x$date_end){
.x[[paste0(var, "")]][.x$date_end == orig] <- .x[[var]][.x$date_end == orig] - .x[[var]][.x$date_end == lag]
}
return(.x)
}
